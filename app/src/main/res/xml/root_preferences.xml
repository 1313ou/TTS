<PreferenceScreen
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<PreferenceCategory
		app:title="Messages">

		<EditTextPreference
			app:key="signature"
			app:title="signature"
			app:useSimpleSummaryProvider="true"/>

		<ListPreference
			app:key="reply"
			app:title="reply"
			app:entries="@array/reply_entries"
			app:entryValues="@array/reply_values"
			app:defaultValue="reply"
			app:useSimpleSummaryProvider="true"/>

	</PreferenceCategory>

	<PreferenceCategory
		app:title="Sync">

		<SwitchPreferenceCompat
			app:key="sync"
			app:title="sync"/>

		<SwitchPreferenceCompat
			app:key="attachment"
			app:title="attachment"
			app:summaryOn="attachment_summary_on"
			app:summaryOff="attachment_summary_off"
			app:dependency="sync"/>

	</PreferenceCategory>

</PreferenceScreen>